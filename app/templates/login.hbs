<form {{action 'authenticate' on='submit'}} class='login-form'>
  {{#if errorMessage}}
    <div class="alert">{{errorMessage}}</div>
  {{/if}}
  <div class="form-group">
    <label for="username">Login</label>
    {{input id='username' placeholder='Enter Login' class='form-control' value=username}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input id='password' placeholder='Enter Password' class='form-control' type='password' value=password}}
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>